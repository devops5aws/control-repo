server.modules = ("mod_rewrite",
                  "mod_redirect",
                  "mod_proxy",
                  "mod_accesslog",
                  "mod_status",
                  "mod_compress")
debug.log-request-handling = "disable"
#server.bind = ""
server.port = <%= @server_port %>
server.username = "<%= @server_user %>"
server.groupname = "<%= @server_group %>"
server.document-root = "<%= @server_documentroot %>"
server.pid-file = "<%= @server_pidfile %>"
accesslog.filename = "<%= @server_accesslog %>"
server.errorlog = "<%= @server_errorlog %>"
server.tag = "<%= @server_tag %>"
server.indexfiles = ( "index.html" )
server.max-connections = <%= @server_maxconns %>
server.max-fds = <%= @server_maxfds %>

mimetype.assign = (
  ".css" => "text/css",
  ".gif" => "image/gif",
  ".html" => "text/html",
  ".jpeg" => "image/jpeg",
  ".jpg" => "image/jpeg",
  ".js" => "text/javascript",
  ".pdf" => "application/pdf",
  ".png" => "image/png",
  ".txt" => "text/plain",
  ".mov"  => "video/quicktime",
  ".m4v"  => "video/x-m4v",
  ".mpeg" => "video/mpeg",
  ".mpg"  => "video/mpeg",
  ".3gp" => "video/3gpp",
  ".mp4" => "video/mp4",
  ".sqlite" => "text/plain",
  "" => "application/octet-stream"
)

compress.allowed-encodings = ("bzip2", "gzip", "deflate")
compress.cache-dir = "/var/www/cache/"
compress.filetype  = (
      "text/plain",
       "text/html",
       "application/octet-stream")

$SERVER["socket"] == ":443" {

  ssl.engine = "enable"
  ssl.pemfile = "<%= @ssl_pemfile %>"
  ssl.ca-file = "<%= @ssl_ca_file %>"
  ssl.use-sslv2 = "disable"
  ssl.cipher-list = "DHE-RSA-AES256-SHA DHE-RSA-AES128-SHA EDH-RSA-DES-CBC3-SHA AES256-SHA AES128-SHA DES-CBC3-SHA DES-CBC3-MD5"
  ssl.honor-cipher-order = "enable"
}
