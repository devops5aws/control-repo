production:
  database: <%= @prod_db_database %>
  username: <%= @prod_db_username %>
  password: <%= @prod_db_password %>
  encoding: utf8
  adapter: <%= @prod_db_adapter %>
  host: <%= @prod_db_host %>

<%- if @development -%>
development:
  database: <%= @dev_db_database %>
  username: <%= @dev_db_username %>
  password: <%= @dev_db_password %>
  encoding: utf8
  adapter: <%= @dev_db_adapter %>
  host: <%= @dev_db_host %>
<%- end -%>
