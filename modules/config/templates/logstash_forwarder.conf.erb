{
  "network": {
    "servers": [ 
<% @logstash_servers.each do |line| -%>
                 "<%= line %>:<%= @logstash_port %>",
<% end -%>
                 "usw2-op01-logstash-001.usw2.yapstone.com:<%= @logstash_port %>"
               ],
    "timeout": <%= @logstash_timeout %>,
    "ssl ca": "<%= @logstash_ssl_ca %>"
  },
  "files": [
    {
      "paths": [
<% @logstash_paths.each do |line| -%>
         "<%= line %>",
<% end -%>
         "/var/log/secure"
       ],
      "fields": { "type": "<%= @field_type %>" }
    }
   ]
}
